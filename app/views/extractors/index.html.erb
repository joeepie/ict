<div class="row-fluid">
<h1>Email extractor</h1>
<%= form_tag "/extractors/index", method: :post, :html => { :class => 'form-horizontal' }  do %>
<div class="row">
<div class="col-md-8">	
  <div class="form-group">
    <label>Input text</label>
    <div class="controls"> 
    	<%= text_area_tag :text_in, @text_in, class: "form-control", rows: "5"  %>
    </div>
  </div>
</div>
<div class="col-md-4">
  <div class="form-group">
    <label>Output emails (<%= @count.to_i %>)</label>
    <div class="controls"> 
    	<%= text_area_tag :text_out, @text_out, class: "form-control", rows: "5" %>
    </div>
  </div>
</div>
</div>
  <div class="form-actions">
    <%= submit_tag "Extract!", :class => 'btn btn-primary' %>
  </div>
<% end %>
</div>